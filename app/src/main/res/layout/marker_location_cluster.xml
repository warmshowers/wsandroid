<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="@dimen/single_host_marker_size"
    android:layout_height="@dimen/single_host_marker_size"
    android:foregroundGravity="center_horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/single_host_marker_size"
        android:layout_height="@dimen/single_host_marker_size"
        android:paddingTop="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/map_markers_multiple" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha=".8"
        android:gravity="center"
        android:paddingTop="7dp"
        android:text="27"
        android:textAppearance="@style/SingleLocationClusterIcon.TextAppearance" />

</FrameLayout>